---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 宿泊情報データを読み込み
const tripInfo = await getCollection('trip');
const accommodation = tripInfo.find(item => item.id === 'accommodation.md');

if (!accommodation) {
  throw new Error('accommodation.mdファイルが見つかりません');
}
---

<Layout title={accommodation.data.title}>
  <!-- ヒーローセクション -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- 背景画像とオーバーレイ -->
    <div class="absolute inset-0 bg-gradient-to-r from-purple-900/80 to-pink-900/80 z-10"></div>
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style={`background-image: url('${accommodation.data.heroImage}')`}></div>
    
    <!-- メインコンテンツ -->
    <div class="relative z-20 text-center text-white px-4">
      <h1 class="text-6xl md:text-8xl font-bold mb-6 animate-fade-in">
        🏠 {accommodation.data.subtitle}
      </h1>
      <p class="text-xl md:text-2xl mb-12 opacity-90 animate-fade-in-delay">
        {accommodation.data.description}
      </p>
      <div class="flex flex-wrap justify-center gap-6 text-sm md:text-base">
        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">📅 {accommodation.data.date}</span>
        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">📍 {accommodation.data.location}</span>
        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">👥 {accommodation.data.participants}</span>
        <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full">⏰ {accommodation.data.duration}</span>
      </div>
    </div>
    
    <!-- スクロールインジケーター -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
      <div class="w-6 h-10 border-2 border-white rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 py-16">
    <!-- ナビゲーション -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-lg rounded-full mx-auto max-w-4xl mb-16">
      <div class="flex justify-center space-x-8 p-6">
        <a href="/" class="text-purple-600 hover:text-purple-800 font-semibold transition-all duration-300 hover:scale-110 flex items-center">
          <span class="text-2xl mr-2">🏠</span>
          ホーム
        </a>
        <a href="#basic-info" class="text-purple-600 hover:text-purple-800 font-semibold transition-all duration-300 hover:scale-110 flex items-center">
          <span class="text-2xl mr-2">ℹ️</span>
          基本情報
        </a>
        <a href="#facilities" class="text-purple-600 hover:text-purple-800 font-semibold transition-all duration-300 hover:scale-110 flex items-center">
          <span class="text-2xl mr-2">🏗️</span>
          設備・サービス
        </a>
        <a href="#floor-map" class="text-purple-600 hover:text-purple-800 font-semibold transition-all duration-300 hover:scale-110 flex items-center">
          <span class="text-2xl mr-2">🗺️</span>
          フロアマップ
        </a>
        <a href="#schedule" class="text-purple-600 hover:text-purple-800 font-semibold transition-all duration-300 hover:scale-110 flex items-center">
          <span class="text-2xl mr-2">📅</span>
          スケジュール
        </a>
      </div>
    </nav>

    <!-- 基本情報セクション -->
    <section id="basic-info" class="mb-24">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold text-gray-800 mb-4">ℹ️ 基本情報</h2>
        <p class="text-xl text-gray-600">宿の基本情報</p>
      </div>
      
      <div class="bg-gradient-to-br from-purple-50 to-pink-100 rounded-3xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-500">
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white/50 rounded-lg p-6">
            <h3 class="text-2xl font-bold text-purple-600 mb-6 flex items-center">
